@model IEnumerable<OrderDetailsViewModel>

@{
    ViewData["Title"] = "Your Orders";
}

<h1 class="text-2xl font-bold mb-6">Your Orders</h1>

@if (Model.Any())
{
    <div class="space-y-6">
        @foreach (var order in Model)
        {
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex justify-between items-center">
                    <div>
                        <h2 class="text-lg font-semibold text-gray-800">Order #@order.OrderId</h2>
                        <p class="text-sm text-gray-600">Placed on: @order.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        <p class="text-sm text-gray-600">Status: <span class="font-medium text-blue-600">@order.Status</span></p>
                    </div>
                    <div class="text-right">
                        <p class="text-lg font-bold text-gray-800">Total: $@order.TotalAmount</p>
                    </div>
                </div>
                <div class="mt-4">
                    <h3 class="text-md font-medium text-gray-700">Items:</h3>
                    <ul class="mt-2 space-y-2">
                        @foreach (var item in order.Items)
                        {
                            <li class="flex justify-between items-center border-b pb-2">
                                <span class="flex-1 text-gray-800">@item.ProductName</span>
                                <span class="w-12 text-center text-gray-600">x @item.Quantity</span>
                                <span class="w-20 text-right text-gray-800">$@(item.Price* item.Quantity)</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center text-gray-500">You have no orders yet.</div>
}