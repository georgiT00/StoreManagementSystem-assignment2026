@model CartDetailsViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<h1 class="text-2xl font-bold mb-6">Your Cart</h1>

<partial name="_ErrorPartial" />

@if (Model.Items.Any())
{
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="overflow-x-auto">
            <table class="min-w-full table-auto border-collapse hidden md:table">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Product</th>
                        <th class="px-4 py-2 text-right text-sm font-medium text-gray-700">Price</th>
                        <th class="px-4 py-2 text-right text-sm font-medium text-gray-700">Quantity</th>
                        <th class="px-4 py-2 text-right text-sm font-medium text-gray-700">Total</th>
                        <th class="px-4 py-2 text-right text-sm font-medium text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr class="border-b">
                            <td class="px-4 py-2 text-sm text-gray-800">@item.ProductName</td>
                            <td class="px-4 py-2 text-right text-sm text-gray-800">$@item.Price</td>
                            <td class="px-4 py-2 text-right text-sm text-gray-800">@item.Quantity</td>
                            <td class="px-4 py-2 text-right text-sm text-gray-800">$@(item.Price* item.Quantity)</td>
                            <td class="px-4 py-2 text-right">
                                <form asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId" method="post">
                                    <button type="submit" class="px-2 py-2 bg-red-600 text-sm text-white rounded hover:bg-red-700 transition">
                                        Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="md:hidden space-y-4">
            @foreach (var item in Model.Items)
            {
                <div class="border rounded-lg p-4 shadow-sm">
                    <div class="flex justify-between">
                        <span class="font-medium text-gray-800">@item.ProductName</span>
                        <span class="text-gray-600">$@item.Price</span>
                    </div>
                    <div class="flex justify-between mt-2">
                        <span class="text-gray-600">Quantity:</span>
                        <span class="text-gray-800">@item.Quantity</span>
                    </div>
                    <div class="flex justify-between mt-2">
                        <span class="text-gray-600">Total:</span>
                        <span class="text-gray-800">$@(item.Price * item.Quantity)</span>
                    </div>
                    <div class="mt-4 text-right">
                        <form asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId" method="post">
                            <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition">
                                Remove
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <div class="text-right mt-4 text-lg font-semibold">
            Total: $@Model.TotalPrice
        </div>

        <div class="text-right mt-6">
            <form asp-controller="Cart" asp-action="PlaceOrder" method="post">
                <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                    Place Order
                </button>
            </form>
        </div>
    </div>
}
else
{
    <div class="text-center text-gray-500">Your cart is empty.</div>
}