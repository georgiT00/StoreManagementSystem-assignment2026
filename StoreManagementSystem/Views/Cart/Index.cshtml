@model CartDetailsViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<h1 class="text-2xl font-bold mb-6">Your Cart</h1>

@if (Model.Items.Any())
{
    <div class="bg-white rounded-lg shadow-md p-6">
        <table class="min-w-full">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Product</th>
                    <th class="px-4 py-2 text-right">Price</th>
                    <th class="px-4 py-2 text-right">Quantity</th>
                    <th class="px-4 py-2 text-right">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="px-4 py-2">@item.ProductName</td>
                        <td class="px-4 py-2 text-right">$@item.Price</td>
                        <td class="px-4 py-2 text-right">@item.Quantity</td>
                        <td class="px-4 py-2 text-right">$@(item.Price* item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-right mt-4 text-lg font-semibold">
            Total: $@Model.TotalPrice
        </div>
    </div>
}
else
{
    <div class="text-center text-gray-500">Your cart is empty.</div>
}