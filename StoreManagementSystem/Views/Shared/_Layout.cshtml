<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoreManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex">
    <button id="sidebarToggle" class="md:hidden fixed top-4 left-4 z-50 bg-blue-600 text-white px-4 py-2 rounded-lg shadow-md hover:bg-blue-700">
        ☰
    </button>

    <nav id ="sidebar" class="hidden md:flex w-64 bg-white shadow-md h-screen fixed top-0 left-0 flex-col">
        <div class="py-5 px-6 text-3xl font-bold text-center text-gray-800">Store</div>
        <div class="p-6 flex-1">
            <ul class="space-y-4">
                <li>
                    <a class="block px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium transition duration-200" asp-area="" asp-controller="Home" asp-action="Index">
                        Dashboard
                    </a>
                </li>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <li>
                        <a class="block px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium transition duration-200" asp-area="" asp-controller="Product" asp-action="Index">
                            Products
                        </a>
                    </li>
                    <li>
                        <a class="block px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium transition duration-200" asp-area="" asp-controller="Order" asp-action="Index">
                            Orders
                        </a>
                    </li>
                    <li>
                        <a class="block px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium transition duration-200" asp-area="" asp-controller="Supplier" asp-action="Index">
                            Suppliers
                        </a>
                    </li>
                }
            </ul>
        </div>

        <div class="p-6 space-y-3 bottom-50">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <a class="block px-4 py-2 rounded-lg bg-yellow-100 hover:bg-yellow-200 text-yellow-800 font-medium text-center transition duration-200" asp-area="" asp-controller="Cart" asp-action="Index">
                    Cart
                </a>
                <div class="flex flex-col items-center space-y-2">
                    <span class="text-gray-800 font-semibold text-center">Hello, @User.Identity.Name</span>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit" class="w-full px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">
                            Logout
                        </button>
                    </form>
                </div>
            }
            else
            {
                <partial name="_LoginPartial" />
            }
        </div>
    </nav>

    <div class="flex-1 flex flex-col md:ml-64">
        <main class="flex-1 p-6 bg-gray-50">
            @RenderBody()
        </main>

        <footer class="border-t text-gray-500 text-sm py-4 bg-white">
            <div class="container mx-auto px-4 text-center">
                &copy; 2026 - StoreManagementSystem -
                <a class="text-blue-600 hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');

        sidebarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('hidden');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>