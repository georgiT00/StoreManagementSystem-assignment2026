@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="block px-4 py-2 rounded active:bg-yellow-200 hover:bg-yellow-100 hover:text-yellow-800 font-semibold" asp-area="Identity" asp-page="/Account/Register">
                Register
        </a>
    </li>
    <li class="nav-item">
        <a class="block px-4 py-2 rounded active:bg-yellow-200 hover:bg-yellow-100 hover:text-yellow-800 font-semibold" asp-area="Identity" asp-page="/Account/Login">
                Login
        </a>
    </li>
}
</ul>
