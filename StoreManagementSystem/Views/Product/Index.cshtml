@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h1 class="text-2xl font-bold mb-6">Products</h1>

<table class="min-w-full bg-white border border-gray-200">
    <thead>
        <tr>
            <th class="px-4 py-2 border-b">#</th>
            <th class="px-4 py-2 border-b text-left">Name</th>
            <th class="px-4 py-2 border-b text-left">Category</th>
            <th class="px-4 py-2 border-b text-left">Supplier</th>
            <th class="px-4 py-2 border-b text-right">Price</th>
            <th class="px-4 py-2 border-b text-right">Stock</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int i = 1;
            foreach (var product in Model)
            {
                <tr>
                    <td class="px-4 py-2 border-b">@i</td>
                    <td class="px-4 py-2 border-b">@product.Name</td>
                    <td class="px-4 py-2 border-b">@product.Category?.CategoryName</td>
                    <td class="px-4 py-2 border-b">@product.Supplier?.SupplierName</td>
                    <td class="px-4 py-2 border-b text-right">@product.Price.ToString("C")</td>
                    <td class="px-4 py-2 border-b text-right">@product.Quantity</td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="px-4 py-2 text-center text-gray-500">No products found.</td>
            </tr>
        }
    </tbody>
</table>
