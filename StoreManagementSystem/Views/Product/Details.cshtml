@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="max-w-xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">@Model.ProductName</h1>
    <div class="mb-2 text-lg text-gray-700">
        <span class="font-semibold">Category:</span> @Model.CategoryName
    </div>
    <div class="mb-2 text-lg text-gray-700">
        <span class="font-semibold">Supplier:</span> @Model.SupplierName
    </div>
    <div class="mb-2 text-lg text-gray-700">
        <span class="font-semibold">Price:</span>
        <span class="text-blue-600 font-bold">$@Model.Price</span>
    </div>
    <div class="mt-8 flex justify-between">
        <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId" class="px-6 py-2 bg-orange-300 rounded transition hover:bg-orange-400 text-gray-800 hover:text-gray-900 font-medium">
            Edit Product
        </a>

        <a asp-controller="Product" asp-action="Index" class="px-6 py-2 bg-gray-200 rounded hover:bg-gray-300 transition text-gray-800 font-medium">
            Back to Products
        </a>
    </div>
</div>