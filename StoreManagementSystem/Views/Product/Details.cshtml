@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="max-w-xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">@Model.ProductName</h1>
    <div class="mb-2 text-lg text-gray-700">
        <span class="font-semibold">Category:</span> @Model.CategoryName
    </div>
    <div class="mb-2 text-lg text-gray-700">
        <span class="font-semibold">Supplier:</span> @Model.SupplierName
    </div>
    <div class="mb-2 text-lg text-gray-700">
        <span class="font-semibold">Quantity:</span> @Model.Quantity
    </div>
    <div class="mb-2 text-lg text-gray-700">
        <span class="font-semibold">Price:</span>
        <span class="text-blue-600 font-bold">$@Model.Price</span>
    </div>
    <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:justify-between">
        <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId"
           class="flex items-center gap-2 px-6 py-2 bg-orange-300 rounded transition hover:bg-orange-400 text-gray-800 hover:text-gray-900 font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
            Edit Product
        </a>

        <a asp-controller="Product" asp-action="Index"
           class="flex items-center gap-2 px-6 py-2 bg-gray-200 rounded hover:bg-gray-300 transition text-gray-800 hover:text-gray-800 font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
            </svg>
            Back to Products
        </a>
    </div>
</div>